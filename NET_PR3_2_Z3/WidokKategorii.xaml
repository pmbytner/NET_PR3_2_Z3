<Window
    x:Class="NET_PR3_2_Z3.WidokKategorii"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:NET_PR3_2_Z3"
    mc:Ignorable="d"
        
    Title="{Binding XPath=nazwa}"
    Height="450"
    Width="500"
    FontSize="24"
    >
    <Grid DataContext="{Binding}">
        <DataGrid
            ItemsSource="{Binding XPath=produkty/produkt}"
            AutoGenerateColumns="False"
            >
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Nazwa produktu"
                    Binding="{Binding XPath=nazwa}"
                    />
                <DataGridTextColumn
                    Header="Cena"
                    Binding="{Binding XPath=cena}"
                    MinWidth="60"
                    />
                <DataGridTextColumn
                    Header="Kraj pochodzenia"
                    Binding="{Binding XPath=kraj_pochodzenia}"
                    />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
