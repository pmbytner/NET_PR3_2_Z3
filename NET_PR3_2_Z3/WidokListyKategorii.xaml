<Window
    x:Class="NET_PR3_2_Z3.WidokListyKategorii"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:NET_PR3_2_Z3"
    mc:Ignorable="d"
    Title="Widok Listy Kategorii"
    
    Height="450"
    Width="300"
    FontSize="24"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListBox Name="ListaKategorii">
            <ListBox.ItemsSource>
                <Binding
                    Source="{StaticResource KategorieProduktów}"
                    XPath="kategoria"
                    />
            </ListBox.ItemsSource>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding XPath=nazwa}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="1" Click="OtwórzKategorię">
            Wybierz
        </Button>
    </Grid>
</Window>
